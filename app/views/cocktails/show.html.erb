
<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description%> of <%= dose.ingredient.name %></li>
      <%= link_to dose_path(dose), class: 'btn btn-danger btn-sm', method: :delete do %>
